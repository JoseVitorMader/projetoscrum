// Firestore security rules for projetoscrum
// Includes rules for users, teams, lists, cards and new collections: sprints and activities

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: todos podem ler (necessário para convites)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Teams: só membros podem ver
    match /teams/{teamId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.members;
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    // Lists: QUALQUER usuário autenticado pode ler/escrever
    match /lists/{listId} {
      allow read, write: if request.auth != null;
    }

    // Cards: QUALQUER usuário autenticado pode ler/escrever
    match /cards/{cardId} {
      allow read, write: if request.auth != null;
    }

    // Sprints: apenas membros do time têm acesso
    match /sprints/{sprintId} {
      allow read: if request.auth != null
        && resource.data.teamId is string
        && exists(/databases/$(database)/documents/teams/$(resource.data.teamId))
        && request.auth.uid in get(/databases/$(database)/documents/teams/$(resource.data.teamId)).data.members;

      allow create: if request.auth != null
        && request.resource.data.teamId is string
        && exists(/databases/$(database)/documents/teams/$(request.resource.data.teamId))
        && request.auth.uid in get(/databases/$(database)/documents/teams/$(request.resource.data.teamId)).data.members;

      allow update, delete: if request.auth != null
        && resource.data.teamId is string
        && exists(/databases/$(database)/documents/teams/$(resource.data.teamId))
        && request.auth.uid in get(/databases/$(database)/documents/teams/$(resource.data.teamId)).data.members;
    }

    // Activities: apenas membros do time podem ler/criar
    match /activities/{activityId} {
      allow read: if request.auth != null
        && resource.data.teamId is string
        && exists(/databases/$(database)/documents/teams/$(resource.data.teamId))
        && request.auth.uid in get(/databases/$(database)/documents/teams/$(resource.data.teamId)).data.members;

      allow create: if request.auth != null
        && request.resource.data.teamId is string
        && exists(/databases/$(database)/documents/teams/$(request.resource.data.teamId))
        && request.auth.uid in get(/databases/$(database)/documents/teams/$(request.resource.data.teamId)).data.members;

      allow update, delete: if request.auth != null
        && resource.data.teamId is string
        && exists(/databases/$(database)/documents/teams/$(resource.data.teamId))
        && request.auth.uid in get(/databases/$(database)/documents/teams/$(resource.data.teamId)).data.members;
    }

  }
}
